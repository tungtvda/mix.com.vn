<div class="post">
    <div class="post-media">
        <div class="image-wrap"><a href="{link}"><img src="{img}"
                                                                alt="{name}" title="{name}"></a></div>
    </div>
    <div class="post-body">
        <div class="post-title"><h2><a title="{name}" href="{link}">{name}</a></h2></div>
        <div class="post-meta lienquan_item">
            <div class="date lienquan_item">- Mã tour: {code}</div>
            <div class="author lienquan_item">- Hành trình: {departure} <i class="awe-icon fa fa-long-arrow-right"></i> {destination}</div>
            <div class="comment lienquan_item"><a >- Thời gian: {durations}</a></div>
        </div>

        <div class="post-content">
            <p class="price_list">Giá: {price_format}</p>
        </div>
        <div class="post-link"><a href="{link}"
                                  class="awe-btn awe-btn-style2">Chi tiết</a></div>
    </div>
</div>